<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/orangegradientbg"
    tools:context="net.apps.jed.yaresa.SigninActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:id="@+id/logo"
        android:src="@mipmap/yaresalogow03"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/formbox"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="10dp"
            android:inputType="textPhonetic"
            android:padding="7dp"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:id="@+id/phone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:inputType="numberPassword"
            android:padding="7dp"
            android:hint="PIN Code"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:id="@+id/pass"

            />

    </LinearLayout>

    <io.rmiri.buttonloading.ButtonLoading
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:BL_backgroundColor="#80ffffff"
        app:BL_circleColor="#00AFEF"
        app:BL_circleColorSecond="#8000AFEF"
        app:BL_enable="true"
        app:BL_stateShow="normal"
        app:BL_text="Login"
        app:BL_textColor="#FFFFFF"
        app:BL_textSize="14sp"
        android:id="@+id/loginbut"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/formbox"
        android:layout_margin="30dp"

        />

</RelativeLayout>
</FrameLayout>
